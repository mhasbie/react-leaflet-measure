{
	"name": "react-leaflet-measure",
	"version": "3.0.0-beta.1",
	"description": "React wrapper of leaflet-measure. Coordinate, linear, and area measure control for Leaflet maps.",
	"main": "dist/react-leaflet-measure.min.js",
	"scripts": {
		"build": "npm run build:lib && npm run build:dist && npm run build:dev",
		"build:dist": "webpack",
		"build:dev": "webpack --mode development --output-path ./dist --output-filename react-leaflet-measure.js",
		"build:lib": "npm run compile:lib",
		"clean:lib": "rm -Rf ./lib",
		"compile:lib": "babel ./src --out-dir lib",
		"prepublishOnly": "npm run build",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mhasbie/react-leaflet-measure.git"
	},
	"homepage": "https://mhasbie.github.io/react-leaflet-measure/",
	"keywords": [
		"react",
		"leaflet",
		"react-leaflet",
		"leaflet-measure",
		"react-leaflet-measure",
		"react-leaflet-v4",
		"react-leaflet-v5"
	],
	"author": "M. Hasbie",
	"license": "MIT",
	"peerDependencies": {
		"leaflet": "^1.9.4",
		"react-leaflet": "^4.0.0 || ^5.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.28.3",
		"@babel/core": "^7.28.5",
		"@babel/eslint-parser": "^7.28.5",
		"@babel/plugin-transform-class-properties": "^7.27.1",
		"@babel/plugin-transform-object-rest-spread": "^7.28.4",
		"@babel/preset-env": "^7.28.5",
		"@babel/preset-react": "^7.28.5",
		"@babel/preset-stage-0": "^7.8.3",
		"@babel/register": "^7.28.3",
		"@react-leaflet/core": "^3.0.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"babel-jest": "^30.2.0",
		"babel-loader": "^10.0.0",
		"css-loader": "^7.1.2",
		"eslint": "^9.39.1",
		"eslint-plugin-react": "^7.37.5",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"leaflet": "^1.9.4",
		"prop-types": "^15.8.1",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"react-leaflet": "^5.0.0",
		"style-loader": "^4.0.0",
		"webpack": "^5.102.1",
		"webpack-cli": "^6.0.1",
		"webpack-dev-server": "^5.2.2"
	},
	"dependencies": {
		"leaflet-measure": "^3.1.0"
	},
	"jest": {
		"collectCoverage": true,
		"transform": {
			"^.+\\.[jt]sx?$": "babel-jest"
		},
		"testMatch": [
			"**/__tests__/**/?(*.)+(spec|test).[jt]s?(x)"
		]
	}
}
